<Window x:Class="NeginProject.LoginConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontFamily="Tahoma" FontSize="20"
    Title="تغییر رمز ورود به برنامه" Height="466" Width="425" Background="LightBlue" KeyUp="Window_KeyUp">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="156*" />
            <ColumnDefinition Width="47*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="83*" />
            <RowDefinition Height="33*" />
            <RowDefinition Height="33*" />
            <RowDefinition Height="64*" />
            <RowDefinition Height="48*" />
        </Grid.RowDefinitions>
        <Label FlowDirection="RightToLeft" FontFamily="Tahoma" FontSize="25" Foreground="MediumBlue" Height="47" Name="label1" VerticalAlignment="Top" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="355" Margin="24,11,24,0">تغییر شناسه یا رمز ورود به برنامه</Label>
        <Label FlowDirection="RightToLeft" FontFamily="Tahoma" Content="شناسه ورود فعلی :" VerticalAlignment="Top" Height="41" Margin="0,101,12,0" HorizontalAlignment="Right" Width="194" Grid.RowSpan="2" Grid.ColumnSpan="3"></Label>
        <TextBox Name="oldUsername" FontFamily="Tahoma" VerticalAlignment="Bottom" Height="31" Margin="39,0,0,4" TabIndex="0"></TextBox>
        <Label FlowDirection="RightToLeft" FontFamily="Tahoma" Content="رمز ورود فعلی :" Grid.Column="1" Margin="0,7,12,0" Grid.Row="1" HorizontalAlignment="Right" Width="137" Grid.ColumnSpan="2" Height="36" VerticalAlignment="Top"></Label>
        <PasswordBox Name="oldPassword" FontFamily="Tahoma" Margin="39,7,0,0" Grid.Row="1" TabIndex="1" Height="32" VerticalAlignment="Top"></PasswordBox>
        <Button Content="اعمال گردد" FlowDirection="RightToLeft" FontFamily="Tahoma" Grid.Row="4" Margin="20,33,0,0" Name="applyButton" Click="applyButton_Click" Grid.Column="1" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="136" TabIndex="5"></Button>
        <Button Content="بازگشت" FlowDirection="RightToLeft" FontFamily="Tahoma" Margin="0,33,30,0" Grid.Row="4" Name="exitButton" Click="exitButton_Click" Height="33" VerticalAlignment="Top" HorizontalAlignment="Right" Width="102"></Button>
        <Label FlowDirection="RightToLeft" FontFamily="Tahoma" Grid.Column="1" Height="44" Margin="2,21,9,0" VerticalAlignment="Top" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2">شناسه ورود جدید :</Label>
        <TextBox FontFamily="Tahoma" Margin="39,0,0.406,0" Name="newUsername" Grid.Row="2" TabIndex="2" Height="33" VerticalAlignment="Bottom" />
        <Label FlowDirection="RightToLeft" FontFamily="Tahoma" Grid.Column="1" Height="44" Margin="33,8,12,0" VerticalAlignment="Top" Grid.Row="3" Grid.ColumnSpan="2">رمز ورود جدید :</Label>
        <PasswordBox FontFamily="Tahoma" Height="32" Margin="39,11,0,0" Name="newPassword" VerticalAlignment="Top" Grid.Row="3" TabIndex="3" />
        <Label FlowDirection="RightToLeft" FontFamily="Tahoma" Margin="182,50,9,0" Grid.Row="3" Grid.ColumnSpan="3" Height="37" VerticalAlignment="Top">رمز ورود جدید (دوباره):</Label>
        <PasswordBox FontFamily="Tahoma" Margin="39,0,0,17" Name="newPassword2" Grid.Row="3" Height="34" VerticalAlignment="Bottom" TabIndex="4" />
        <Image HorizontalAlignment="Left" Margin="18,20,0,12" Source="/NeginProject;component/Images/apply.png" Width="46" Grid.Row="4" Grid.Column="1" />
        <Image Margin="0,20,97,12" Source="/NeginProject;component/Images/return.png" Grid.Row="4" HorizontalAlignment="Right" Width="46" />
    </Grid>
</Window>
