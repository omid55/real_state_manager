<Window x:Class="NeginProject.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" FontSize="20" Background="LightBlue"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontFamily="Tahoma"
        Title="افزودن کاربر" Height="428" Width="423" KeyUp="Window_KeyUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249" />
            <ColumnDefinition Width="152" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="66" />
            <RowDefinition Height="43" />
            <RowDefinition Height="52" />
            <RowDefinition Height="52" />
            <RowDefinition Height="42" />
            <RowDefinition Height="78" />
            <RowDefinition Height="56*" />
        </Grid.RowDefinitions>
        <Label Content="ثبت کاربر جدید" VerticalAlignment="top" Margin="0,5,0,0" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontSize="25" Foreground="#FF3956D3" Grid.Column="0" ></Label>
        <Label FlowDirection="RightToLeft" Content="شناسه کاربر :" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"></Label>
        <TextBox FlowDirection="RightToLeft" Name="User_Txt" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Width="213" Margin="0,6" TabIndex="0"></TextBox>
        <Label Content="کلمه عبور :" FlowDirection="RightToLeft" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" />
        <CheckBox FlowDirection="RightToLeft" Content="اجازه ثبت" Grid.Column="1" Grid.Row="4" Height="29" HorizontalAlignment="Left" Margin="35,13,0,0" Name="Insert_CheckBox" VerticalAlignment="Top" Width="Auto" TabIndex="2" />
        <PasswordBox FlowDirection="RightToLeft" HorizontalAlignment="Right" Name="Pass_Txt" VerticalAlignment="Center" Width="213" Grid.Row="2" Margin="0,11" TabIndex="1" />
        <Label Content="دسترسی های کاربر :" FlowDirection="RightToLeft" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="3" Grid.ColumnSpan="2" Width="195"/>
        <CheckBox Content="اجازه جستجو" FlowDirection="RightToLeft" Height="29" HorizontalAlignment="Left" Margin="58,13,0,0" Name="Search_CheckBox" VerticalAlignment="Top" Width="Auto" Grid.Row="4" TabIndex="3" />
        <CheckBox Content="اجازه حذف" FlowDirection="RightToLeft" Height="29" HorizontalAlignment="Left" Margin="0,6,0,0" Name="Delete_CheckBox" VerticalAlignment="Top" Width="130" Grid.Row="5" Grid.Column="1" TabIndex="4" />
        <CheckBox Content="اجازه ویرایش" FlowDirection="RightToLeft" Height="29" HorizontalAlignment="Left" Margin="64,6,0,0" Name="Edit_CheckBox" VerticalAlignment="Top" Width="Auto" Grid.Row="5" TabIndex="5" />
        <Button Content="بازگشت" HorizontalAlignment="Right" Margin="0,14,75,0" Name="button2" TabIndex="7" Width="127" Grid.Row="6" Height="30" VerticalAlignment="Top" Click="button2_Click" />
        <Image HorizontalAlignment="Right" Margin="0,0,157,0" Name="image1" Source="/NeginProject;component/Images/return.png" Width="45" Grid.Row="6" Height="45" VerticalAlignment="Top" />
        <Button Content="ثبت" Margin="249,14,25,0" Name="button1" TabIndex="6" Grid.ColumnSpan="2" Grid.Row="6" Height="30" VerticalAlignment="Top" Click="button1_Click" />
        <Image Margin="227,0,120,0" Source="/NeginProject;component/Images/add_user.png" Grid.Row="6" Grid.ColumnSpan="2" Height="45" VerticalAlignment="Top" />
    </Grid>
</Window>
